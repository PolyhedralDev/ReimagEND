num random = randomInt(100);

if (getBlock(0,0,0) != "minecraft:stone") fail;

if (random == 0) {
    block(0,0,0,"minecraft:diamond_ore");
} else if (random < 3) {
    block(0,0,0,"minecraft:emerald_ore");
} else if (random <= 8) {
    block(0,0,0,"minecraft:gold_ore");
} else if (random <= 20) {
    block(0,0,0,"minecraft:iron_ore");
} else if (random <= 30) {
    block(0,0,0,"minecraft:coal_ore");
} else {
    block(0,0,0,"minecraft:stone");
}